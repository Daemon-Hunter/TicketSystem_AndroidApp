<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".UI.activities.ChildEventActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--event image-->
        <ImageView
            android:id="@+id/child_event_venue_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--event title-->
        <TextView
            android:id="@+id/child_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/child_event_venue_image"
            android:text="Event Name"
            android:textColor="@android:color/white"
            android:textSize="28sp" />

        <!--date-->
        <TextView
            android:id="@+id/child_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/child_event_name"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/child_event_venue_image"
            android:text="Date"
            android:textColor="@android:color/white" />

        <!--address-->
        <TextView
            android:id="@+id/child_event_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/child_event_date"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/child_event_venue_image"
            android:text="Address"
            android:textColor="@android:color/white" />

        <!--description-->
        <TextView
            android:id="@+id/child_event_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/child_event_venue_image"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@android:color/white" />

        <!--buy ticket image-->
        <ImageView
            android:id="@+id/buy_tickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/child_event_description"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:src="@drawable/buy_now" />

        <!-- event lineup list-->
        <ListView
            android:id="@+id/lineup_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buy_tickets"
            android:background="@android:color/white"
            android:fadeScrollbars="false"/>

    </RelativeLayout>

</RelativeLayout>




