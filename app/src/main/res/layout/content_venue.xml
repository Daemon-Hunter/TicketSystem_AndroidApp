<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context=".UI.activities.VenueActivity"
                tools:showIn="@layout/activity_venue">

    <!--venue image-->
    <ImageView
        android:id="@+id/venue_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/social_media_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/venue_image"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:src="@drawable/sm_facebook"/>

        <ImageView
            android:id="@+id/twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:src="@drawable/sm_twitter"/>

        <ImageView
            android:id="@+id/instagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:src="@drawable/sm_instagram"/>

    </LinearLayout>

    <!--venue name title-->
    <TextView
        android:id="@+id/venue_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/venue_image"
        android:textColor="@android:color/white"
        android:textSize="28sp"/>

    <!--venue description-->
    <TextView
        android:id="@+id/venue_description"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@id/venue_title"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/venue_image"
        android:textColor="@android:color/white"/>

    <!--venue map-->
    <ImageView
        android:id="@+id/venue_map"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/venue_description"
        android:layout_toRightOf="@id/venue_phone_no"
        android:layout_alignParentRight="true"
        android:layout_marginTop="7dp"
        android:src="@drawable/google_maps_icon"
        android:adjustViewBounds="true"
        android:scaleType="fitEnd"/>

    <!--venue capacity-->
    <TextView
        android:id="@+id/venue_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/venue_description"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/venue_image"
        android:textColor="@android:color/white"/>

    <!--venue phone number-->
    <TextView
        android:id="@+id/venue_phone_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/venue_capacity"
        android:layout_marginStart="15dp"
        android:layout_toRightOf="@id/venue_image"
        android:textColor="@android:color/white"/>

    <!--venue email-->
    <TextView
        android:id="@+id/venue_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/venue_phone_no"
        android:layout_marginStart="15dp"
        android:layout_toRightOf="@id/venue_image"
        android:textColor="@android:color/white"/>

    <LinearLayout
        android:id="@+id/upcoming_message_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/venue_email"
        android:layout_marginTop="5dp"
        android:background="@android:color/holo_blue_dark"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/upcoming_uk_events_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/upcoming_events"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>

    </LinearLayout>

    <!-- event lineup list-->
    <ListView
        android:id="@+id/venue_child_event_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upcoming_message_container"
        android:background="@android:color/white"
        android:fadeScrollbars="false"/>

    <ImageView
        android:id="@+id/no_upcoming_events_image"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_below="@id/upcoming_message_container"
        android:layout_centerHorizontal="true"
        android:src="@drawable/no_events"/>

</RelativeLayout>
