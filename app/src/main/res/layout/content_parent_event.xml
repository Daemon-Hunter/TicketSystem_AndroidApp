<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context=".UI.activities.ParentEventActivity"
                tools:showIn="@layout/activity_parent_event">


    <!--event image-->
    <ImageView
        android:id="@+id/parent_event_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--event title-->
    <TextView
        android:id="@+id/parent_event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/parent_event_image"
        android:text="Event Name"
        android:textColor="@android:color/white"
        android:textSize="28sp"/>

    <!--date-->
    <TextView
        android:id="@+id/parent_event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/parent_event_title"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/parent_event_image"
        android:text="12th May - 15th May"
        android:textColor="@android:color/white"/>

    <ScrollView
        android:id="@+id/parent_event_description_scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_toRightOf="@id/parent_event_image"
        android:layout_below="@id/parent_event_date">

        <!--description-->
        <TextView
            android:id="@+id/parent_event_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/parent_event_date"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/parent_event_image"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@android:color/white"/>

    </ScrollView>

    <LinearLayout
        android:id="@+id/social_media_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parent_event_image"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/sm_facebook"/>

        <ImageView
            android:id="@+id/twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/sm_twitter"/>

        <ImageView
            android:id="@+id/instagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/sm_instagram"/>

    </LinearLayout>

    <!-- event lineup list-->
    <ListView
        android:id="@+id/child_events_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/social_media_container"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:fadeScrollbars="false"/>

    <TextView
        android:id="@+id/no_child_events_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/no_upcoming_events"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/no_child_events"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/no_child_events_message"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/no_events"
        android:visibility="gone"/>

</RelativeLayout>




