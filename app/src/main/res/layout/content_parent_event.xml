<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".UI.activities.ParentEventActivity"
    tools:showIn="@layout/activity_parent_event">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--event image-->
        <ImageView
            android:id="@+id/parent_event_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!--event title-->
        <TextView
            android:id="@+id/parent_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/parent_event_image"
            android:text="Event Name"
            android:textColor="@android:color/white"
            android:textSize="28sp" />

        <!--date-->
        <TextView
            android:id="@+id/parent_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/parent_event_name"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/parent_event_image"
            android:text="12th May - 15th May"
            android:textColor="@android:color/white" />

        <!--description-->
        <TextView
            android:id="@+id/parent_event_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/parent_event_date"
            android:layout_toRightOf="@id/parent_event_image"
            android:layout_marginLeft="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:id="@+id/social_media_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/parent_event_image"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sm_facebook"
                android:padding="5dp"/>

            <ImageView
                android:id="@+id/twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sm_twitter"
                android:padding="5dp"/>

            <ImageView
                android:id="@+id/instagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sm_instagram"
                android:padding="5dp"/>

        </LinearLayout>

        <!-- event lineup list-->
        <ListView
            android:id="@+id/child_events_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/social_media_container"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:fadeScrollbars="false"/>

    </RelativeLayout>

</RelativeLayout>




