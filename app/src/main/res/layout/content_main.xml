<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/root_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".UI.MainActivity">

    <LinearLayout
        android:id="@+id/ll_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGrey200">

        <!--events button-->
        <Button
            android:id="@+id/btn_event"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/events"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:clickable="false"
            android:textColor="@color/colorGrey200"/>

        <!--artist button-->
        <Button
            android:id="@+id/btn_artist"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/artists"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <!--following button-->
        <Button
            android:id="@+id/btn_venue"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/venues"
            android:textAllCaps="false"
            android:textSize="12sp">
        </Button>

        <!--tickets button-->
        <Button
            android:id="@+id/btn_tickets"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/tickets"
            android:textAllCaps="false"
            android:textSize="12sp">
        </Button>

    </LinearLayout>

    <!--fragment container for tabs-->
    <FrameLayout
        android:id="@+id/contentFragmentMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_btns"
        android:layout_weight="1" />

</RelativeLayout>
