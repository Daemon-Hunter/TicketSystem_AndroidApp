<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background6"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context=".UI.activities.ArtistActivity"
                tools:showIn="@layout/activity_artist">

    <!--mArtist image-->
    <ImageView
        android:id="@+id/artist_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--mArtist name title-->
    <TextView
        android:id="@+id/artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/artist_image"
        android:text="Artist Name"
        android:textColor="@android:color/white"
        android:textSize="28sp"/>

    <ScrollView
        android:id="@+id/artist_description_scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_below="@id/artist_name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/artist_image">

        <!--description-->
        <TextView
            android:id="@+id/artist_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"/>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/sm_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/artist_image"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/artist_description_scroll_view">

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:src="@drawable/sm_facebook"/>

        <ImageView
            android:id="@+id/twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/facebook"
            android:padding="2dp"
            android:src="@drawable/sm_twitter"/>

        <ImageView
            android:id="@+id/instagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/twitter"
            android:padding="2dp"
            android:src="@drawable/sm_instagram"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@id/facebook">

            <ImageView
                android:id="@+id/spotify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:src="@drawable/sm_spotify"/>

            <ImageView
                android:id="@+id/soundcloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/spotify"
                android:padding="2dp"
                android:src="@drawable/sm_soundcloud"/>

        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/featured_lineup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sm_layout"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@android:color/holo_blue_dark">

        <TextView
            android:id="@+id/tv_event_lineup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/upcoming_performances"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

    </LinearLayout>

    <!-- event lineup list-->
    <ListView
        android:id="@+id/artist_child_event_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/featured_lineup"
        android:background="@android:color/white"
        android:fadeScrollbars="false"/>

</RelativeLayout>
