<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".UI.EventActivity"
    tools:showIn="@layout/activity_event">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--event image-->
        <ImageView
            android:id="@+id/event_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--event title-->
        <TextView
            android:id="@+id/event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/event_image"
            android:text="Event Name"
            android:textColor="@android:color/white"
            android:textSize="28sp" />

        <!--date-->
        <TextView
            android:id="@+id/event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_title"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/event_image"
            android:text="12th May - 15th May"
            android:textColor="@android:color/white" />

        <!--address-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_date"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/event_image"
            android:text="Devon Arena, Plymouth, PL3 4KF"
            android:textColor="@android:color/white" />

        <!--description-->
        <TextView
            android:id="@+id/event_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_image"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="This is where the description of the event will go... This is where the description of the event will go... This is where the description of the event will go..."
            android:textColor="@android:color/white" />

        <!--buy ticket image-->
        <ImageView
            android:id="@+id/buy_tickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_description"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:src="@drawable/buy_now" />

        <!-- event lineup list-->
        <ListView
            android:id="@+id/lineup_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buy_tickets"
            android:background="@android:color/white"
            android:fadeScrollbars="false"/>

    </RelativeLayout>

    <!--fragment container for tabs-->
    <FrameLayout
        android:id="@+id/contentFragmentEvent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>




